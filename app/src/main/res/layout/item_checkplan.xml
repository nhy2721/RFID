<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/news_summary_card_view"
    app:cardBackgroundColor="@color/item_background"
    app:cardElevation="5dp"
    >
    <!--app:cardCornerRadius="2dp"-->
    <!--app:contentPadding="0dp"-->

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        >

        <TextView
            android:id="@+id/news_summary_photo_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/item_margin"
            android:textColor="@color/primary_text"
            tools:text="计划名称"
            />

        <TextView
            android:id="@+id/checkplan_bz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/news_summary_photo_iv"
            android:layout_alignStart="@+id/news_summary_photo_iv"
            android:layout_alignTop="@+id/checkplan_bz_tv"
            android:layout_marginBottom="@dimen/item_margin"

            android:layout_marginRight="@dimen/item_margin"
            android:textColor="@color/primary_text"
            tools:text="备注"
            />

        <TextView
            android:id="@+id/checkplan_fw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/checkplan_bz"
            android:layout_alignStart="@+id/checkplan_bz"
            android:layout_below="@+id/checkplan_bz_tv"
            android:layout_marginTop="5dp"
            android:textColor="@color/primary_text"
            tools:text="盘点范围"
            />

        <TextView
            android:id="@+id/checkplan_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/news_summary_photo_iv"
            android:layout_marginRight="@dimen/item_margin"
            android:layout_toRightOf="@+id/news_summary_photo_iv"
            android:maxLines="1"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/textsize_14"
            tools:text="习近平:吹响建设科技强国号角国号角国号角"
            />

        <TextView
            android:id="@+id/checkplan_bz_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/checkplan_title_tv"
            android:layout_alignStart="@+id/checkplan_title_tv"
            android:layout_below="@+id/checkplan_title_tv"
            android:layout_marginRight="@dimen/item_margin"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/textsize_14"
            tools:text="科技是国之利器，中国人民生活要好，必须有强大科技。"
            />

        <TextView
            android:id="@+id/news_summary_ptime_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/checkplan_bz_tv"
            android:layout_below="@id/checkplan_bz_tv"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="@dimen/item_margin"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/textsize_14"
            tools:text="1号库房1架-2号库房2架子"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>